<Window x:Class="OTBaseNew.Other.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="Loading" Height="300" Width="300" Topmost="True" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0"/>
    </Window.Background>
    <Grid>
        <Image Name="img" RenderTransformOrigin="0.5,0.5"/>
        <Canvas Name="can" RenderTransformOrigin="0.5,0.5">
            <Ellipse Name="pink" Margin="0 100 0 0" Height="100" Width="100" Fill="#FFFF015D"/>
            <Ellipse Name="blue" Margin="100 0 200 200" Height="100" Width="100" Fill="#FF4148D3"/>
            <Ellipse Name="yellow" Margin="100 200 100 100" Height="100" Width="100" Fill="#FFF0BE3A"/>
            <Ellipse Name="green" Margin="200 100 100 100" Height="100" Width="100" Fill="#FF5ECF34"/>
        </Canvas>
    </Grid>
</Window>
