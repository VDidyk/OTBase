<Window x:Class="OTBaseNew.Users.ChangeUserPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditOperatorWindow" Height="128" Width="762.9" WindowStyle="None" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" BorderThickness="1" BorderBrush="LightCoral">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..//MainDictionary.xaml" />
                <ResourceDictionary Source="..//ScrollBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox Name="password" Style="{DynamicResource TexBoxStyle}" VerticalAlignment="Center" Height="23"  Margin="10 0 10 0"/>
            <Button Name="btn" Style="{DynamicResource ButtonStyle}" Content="Зберегти" Margin="10 10 10 0" Click="btn_Click"/>
            <Button  Style="{DynamicResource ButtonStyle}" Content="Закрити" Margin="10 10 10 0" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
